<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="url" value="jdbc:postgresql://demo-postgres:5432/postgres"/>
        <property name="username" value="postgres"/>
        <property name="password" value="postgres"/>
    </bean>

    <bean id="connection" factory-bean="dataSource" factory-method="getConnection"/>

    <bean id="userRepository" class="com.teachmeskills.repository.JdbcUserRepository">
        <constructor-arg index="0" ref="connection"/>
    </bean>

    <bean id="friendRepository" class="com.teachmeskills.repository.JdbcFriendRepository">
        <constructor-arg index="0" ref="connection"/>
    </bean>

    <bean id="messageRepository" class="com.teachmeskills.repository.JdbcMessageRepository">
        <constructor-arg index="0" ref="connection"/>
    </bean>


    <context:property-placeholder location="classpath*:app.properties" />

    <bean id="hashProperties" class="com.teachmeskills.properties.HashProperties">
        <constructor-arg index="0" value="${hashSecret}"/>
    </bean>

    <bean id="hashPassword" class="com.teachmeskills.repository.BcryptHashPassword">
        <constructor-arg index="0" ref="hashProperties"/>
    </bean>

    <bean id="userService" class="com.teachmeskills.service.UserService">
        <constructor-arg index="0" ref="userRepository"/>
        <constructor-arg index="1" ref="hashPassword"/>
    </bean>

    <bean id="friendRequestRepository" class="com.teachmeskills.repository.JdbcFriendRequestRepository">
        <constructor-arg index="0" ref="connection"/>
    </bean>

    <bean id="requestService" class="com.teachmeskills.service.FriendRequestService">
        <constructor-arg index="0" ref="friendRequestRepository"/>
        <constructor-arg index="1" ref="friendRepository"/>
    </bean>

    <bean id="friendService" class="com.teachmeskills.service.FriendService">
        <constructor-arg index="0" ref="friendRepository"/>
    </bean>

    <bean id="messageService" class="com.teachmeskills.service.MessageService">
        <constructor-arg index="0" ref="messageRepository"/>
    </bean>

    <bean id="userFacade" class="com.teachmeskills.facade.UserFacade">
        <constructor-arg index="0" ref="userService"/>
    </bean>

    <bean id="friendFacade" class="com.teachmeskills.facade.FriendFacade">
        <constructor-arg index="0" ref="friendService"/>
        <constructor-arg index="1" ref="userService"/>
        <constructor-arg index="2" ref="messageService"/>
    </bean>

    <bean id="friendRequestFacade" class="com.teachmeskills.facade.FriendRequestFacade">
        <constructor-arg index="0" ref="requestService"/>
        <constructor-arg index="1" ref="friendRequestRepository"/>
        <constructor-arg index="2" ref="userService"/>
    </bean>

    <bean id="messageFacade" class="com.teachmeskills.facade.MessageFacade">
        <constructor-arg index="0" ref="messageService"/>
    </bean>

</beans>